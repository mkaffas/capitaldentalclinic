        <!--		paperformat="pragtech_dental_management.oman_reinburstment_paperformat"-->
        <template id="report_cdc">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <div t-attf-class="header o_company_#{o.id}_layout" t-att-style="report_header_style">
                            <div class="row">
                                <div class="col-6">
                                    <img
                                            src="/pragtech_dental_management/static/src/img/header.png"
                                            style="max-height: 120px;" alt="Logo"/>
                                </div>

                            </div>
                        </div>
                        <div class="page" style="font-size: 12px;">
                            <table width="100%">
                                <tr>
                                    <td width="15%">
                                        <strong>NAME :</strong>
                                    </td>
                                    <td width="50%">
                                        <span t-field="o.partner_id.name"/>
                                    </td>
                                    <td width="15%">
                                        <strong>ID :</strong>
                                    </td>
                                    <td width="20%">
                                        <span t-field="o.patient_id"/>
                                    </td>
                                </tr>
                            </table>
                            <br/>
                            <table width="100%"
                                   class='table table-striped table-sm table-hover'>
                                <thead>
                                    <tr>
                                        <th>Description</th>
                                        <th>Create ON</th>
                                        <th>Tooth</th>
                                        <th>Status</th>
                                        <th>Completion Date</th>
                                        <th>Amount</th>
                                        <th>Discount Amount</th>
                                        <th>Discount %</th>
                                        <th>Net Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.teeth_treatment_ids" t-as="line">
                                        <tr>
                                            <td>
                                                <span t-field="line.description"/>
                                            </td>
                                            <td>
                                                <span t-field="line.create_date"/>
                                            </td>
                                            <td>
                                                <span t-field="line.teeth_id"/>
                                            </td>
                                            <td>
                                                <span t-field="line.state"/>
                                            </td>
                                            <td>
                                                <span t-field="line.completion_date"/>
                                            </td>
                                            <td>
                                                <span t-field="line.amount"/>
                                            </td>
                                            <td>
                                                <span t-field="line.discount_amount"/>
                                            </td>
                                            <td>
                                                <span t-field="line.discount"/>
                                            </td>
                                            <td>
                                                <span t-field="line.net_amount"/>
                                            </td>

                                        </tr>

                                    </t>
                                    <tr style="border:0px solid black;background-color: white">
                                        <td colspan="6"></td>
                                        <td colspan="2">Service amount before tax</td>
                                        <td>
                                            <span t-field="o.service_amount"/>
                                        </td>
                                    </tr>
                                    <tr style="border-top:0px solid black;background-color: white">
                                        <td colspan="6" style="border:0px solid black;background-color: white"></td>
                                        <td colspan="2">Total Discount</td>
                                        <td>
                                            <span t-field="o.total_discount"/>
                                        </td>
                                    </tr>
                                    <tr style="border:0px solid black;background-color: white">
                                        <td colspan="6" style="border:0px solid black;background-color: white"></td>
                                        <td colspan="2">Service net amount</td>
                                        <td>
                                            <span t-field="o.service_net"/>
                                        </td>
                                    </tr>
                                    <tr style="border:0px solid black;background-color: white">
                                        <td colspan="6" style="border:0px solid black;background-color: white"></td>
                                        <td colspan="2">Total payment</td>
                                        <td>
                                            <span t-field="o.total_payment"/>
                                        </td>
                                    </tr>
                                    <tr style="border:0px solid black;background-color: white">
                                        <td colspan="6" style="border:0px solid black;background-color: white"/>
                                        <td colspan="2">Total Net</td>
                                        <td>
                                            <span t-field="o.total_net"/>
                                        </td>
                                    </tr>


                                </tbody>
                            </table>


                            <div class="footer" style="border-top: 1px solid #000000;">
                                <br/>
                                <div class="text-center">
                                    Page:
                                    <span class="page"/>
                                    /
                                    <span class="topage"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
