<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_form" model="ir.ui.view">
        <field name="name">inherit.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="SMS EG" string="SMS EG" data-key="sms_eg">
                    <h2>SMS EG Configuration</h2>
                    <div class="row mt16 o_settings_container" id="SMS">
                        <div class="col-lg-6 col-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="eg_username" class="d-block"/>
                                <field name="eg_username"/>
                                <label for="eg_password" class="d-block"/>
                                <field name="eg_password"/>
                                <label for="eg_sender" class="d-block"/>
                                <field name="eg_sender"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>